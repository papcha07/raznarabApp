<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRespond"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:elevation="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageAvatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account"
            android:contentDescription="Аватар"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/textPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+7 (900) 123-45-67"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/ys_text_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageAvatar"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ratingContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/imageAvatar"
            app:layout_constraintTop_toBottomOf="@id/textPhone"
            app:layout_constraintBottom_toTopOf="@id/textDescription">

            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/starId"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star"
                app:layout_constraintBottom_toBottomOf="@+id/textRating"
                app:layout_constraintTop_toTopOf="@+id/textRating"
                app:tint="@android:color/holo_orange_light" />

            <TextView
                android:id="@+id/textRating"
                android:fontFamily="@font/ys_text_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="4.8"
                app:layout_constraintStart_toEndOf="@id/starId"
                android:textColor="#FF9800"
                android:layout_marginStart="4dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/typeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Компания"
            app:layout_constraintStart_toEndOf="@id/ratingContainer"
            app:layout_constraintTop_toTopOf="@id/ratingContainer"
            app:layout_constraintBottom_toBottomOf="@id/ratingContainer"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/ys_text_regular"
            >
        </TextView>
        <TextView
            android:id="@+id/textDescription"
            android:layout_width="0dp"
            android:fontFamily="@font/ys_text_regular"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/ratingContainer"
            app:layout_constraintStart_toEndOf="@id/imageAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
