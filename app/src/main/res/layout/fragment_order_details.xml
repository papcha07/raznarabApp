<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageOrderPhoto"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardOrderInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-40dp"
        android:elevation="4dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageOrderPhoto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textOrderTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Доставка документов"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textOrderPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 000 р"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textStyle="bold"
                android:paddingTop="6dp"/>

            <TextView
                android:id="@+id/textOrderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Создан: 18 мая 2025"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:paddingTop="4dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/labelResponders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Откликнулись исполнители"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardOrderInfo"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerResponses"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelResponders"
        app:layout_constraintBottom_toTopOf="@id/buttonCancelOrder"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCancelOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Отменить заказ"
        android:layout_margin="16dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textColor="@color/white"
        app:cornerRadius="16dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>