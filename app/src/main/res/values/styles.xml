<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="order_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColor">@color/text_color_settings</item>
    </style>

    <style name="order_edit_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="RoundedImageViewStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">30dp</item>
    </style>

    <style name="profileBackgroundStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_marginTop">105dp</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColorHint">#555555</item>
        <item name="android:elevation">3dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/profile_background_edit_text</item>
    </style>

    <style name="headerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="settingsViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_marginTop">105dp</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColorHint">#555555</item>
        <item name="android:elevation">3dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/profile_background_edit_text</item>
    </style>

    <style name="main_text_style_settings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_settings</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="second_text_style_settings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_settings</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">35dp</item>
    </style>

    <style name="playlistImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>